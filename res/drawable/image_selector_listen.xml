<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:drawable="@drawable/speaker_disabled"
         android:state_enabled="false"/> <!-- disabled -->
    <item android:state_pressed="true"
           android:drawable="@drawable/speaker_clicked" /> <!-- pressed -->
     <item android:state_focused="true"
           android:drawable="@drawable/speaker_clicked" /> <!-- focused -->
     <item android:drawable="@drawable/speaker" /> <!-- default -->
     
</selector>

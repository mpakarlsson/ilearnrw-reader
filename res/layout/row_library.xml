<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#94DBFF"
	android:descendantFocusability="blocksDescendants">
    
    <TextView 
        android:id="@+id/library_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:textSize="20sp"
	/>
    
    <Button 
        android:id="@+id/library_open_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="?android:attr/buttonStyleToggle"
        android:text="@string/library_open"
        android:textSize="20sp"
        android:paddingRight="40dp"/>
    
    <Button 
        android:id="@+id/library_open_coloured"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="?android:attr/buttonStyleToggle"
        android:text="@string/library_open_coloured"
        android:textSize="20sp"
        android:paddingRight="40dp"/>

</LinearLayout>

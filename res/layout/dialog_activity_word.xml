<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical" >
    

    <RelativeLayout 
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        
        <TextView 
	        android:id="@+id/tv_word_word"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="@string/default_text"
	        android:textSize="@dimen/font_size_default_title"
	        android:layout_alignParentLeft="true"
	        android:gravity="center_vertical"/>
	    
        
        <ImageView
            android:id="@+id/iv_word_speak"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="center"
            android:contentDescription="@string/empty"
            android:layout_alignParentRight="true"
            android:src="@drawable/speaker"
            />
        
    </RelativeLayout>
    
    <View 
        android:id="@+id/line_divider"
        style="@style/line_divider_2"
        android:layout_below="@id/layout_title"/>
    
    <RelativeLayout 
        android:id="@+id/layout_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        
        <Button
            android:id="@+id/btn_add_tricky_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_tricky_word"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/lv_word_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line_divider"
        android:layout_above="@id/layout_bar"/>
    
    
    
    
</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="96dp"
    android:layout_height="24dp"
    android:layout_gravity="center_vertical"
    android:layout_marginRight="6dp"
    android:orientation="horizontal">
	<FrameLayout 
	    android:layout_width="24dp"
	    android:layout_height="24dp"
	    android:layout_gravity="center_vertical"
	    android:layout_marginRight="6dp"
	    android:focusable="false"
	    android:clickable="false" >
	
	    <ImageView
	        android:layout_width="24dp"
	        android:layout_height="match_parent"
	        android:scaleType="fitXY"
	        android:src="@drawable/alpha_checkered_tiled"
	        android:contentDescription="@string/empty"/>
	    
	    <com.ilearnrw.reader.types.ColorPickerPreferenceWidget
	        android:layout_width="24dp"
	        android:layout_height="match_parent"
	        android:id="@+id/color_options_widget_text_box"/>
	</FrameLayout>
	
	<FrameLayout 
	    android:layout_width="24dp"
	    android:layout_height="24dp"
	    android:layout_gravity="center_vertical"
	    android:layout_marginRight="6dp"
	    android:focusable="false"
	    android:clickable="false" >
	
	    <ImageView
	        android:layout_width="24dp"
	        android:layout_height="match_parent"
	        android:scaleType="fitXY"
	        android:src="@drawable/alpha_checkered_tiled"
	        android:contentDescription="@string/empty"/>
	    
	    <com.ilearnrw.reader.types.ColorPickerPreferenceWidget
	        android:layout_width="24dp"
	        android:layout_height="match_parent"
	        android:id="@+id/color_options_widget_bg_box"/>
	</FrameLayout>
	
	<FrameLayout 
	    android:layout_width="24dp"
	    android:layout_height="24dp"
	    android:layout_gravity="center_vertical"
	    android:layout_marginRight="6dp"
	    android:focusable="false"
	    android:clickable="false" >
	
	    <ImageView
	        android:layout_width="24dp"
	        android:layout_height="match_parent"
	        android:scaleType="fitXY"
	        android:src="@drawable/alpha_checkered_tiled"
	        android:contentDescription="@string/empty"/>
	    
	    <com.ilearnrw.reader.types.ColorPickerPreferenceWidget
	        android:layout_width="24dp"
	        android:layout_height="match_parent"
	        android:id="@+id/color_options_widget_hl_box"/>
	</FrameLayout>
</LinearLayout>